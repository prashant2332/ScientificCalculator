<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/black_shade_3"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/idTVSecondary"
        android:background="@color/black_shade_3"
        android:gravity="bottom"
        android:maxLines="1"
        android:padding="10dp"
        android:paddingTop="30dp"
        android:text=""
        android:textAlignment="viewEnd"
        android:textColor="@color/white"
        android:textSize="15sp"
        tools:ignore="RtlCompat" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/idTVPrimary"
        android:layout_below="@+id/idTVSecondary"
        android:background="@color/black_shade_3"
        android:gravity="bottom"
        android:maxLines="1"
        android:padding="10dp"
        android:text=""
        android:textAlignment="viewEnd"
        android:textColor="@color/white"
        android:textSize="50sp"
        tools:ignore="RtlCompat" />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/idTVPrimary"
        android:background="@color/black_shade_1"
        app:cardBackgroundColor="@color/black_shade_1"
        app:cardCornerRadius="4dp"
        app:cardElevation="2dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="7"
            android:background="@color/black_shade_1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:weightSum="4">
                <Button
                    android:id="@+id/idBtnAC"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black_shade_2"
                    android:padding="6dp"
                    android:gravity="center"
                    android:text="@string/ac"
                    android:textColor="@color/yellow"
                    android:textSize="15sp"/>
                <Button
                    android:id="@+id/idBtnC"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black_shade_2"
                    android:padding="6dp"
                    android:gravity="center"
                    android:text="@string/c"
                    android:textColor="@color/yellow"
                    android:textSize="15sp"/>
                <Button
                    android:id="@+id/idBtnBrac1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:backgroundTint="@color/black_shade_2"
                    android:padding="6dp"
                    android:text="@string/brac1"
                    android:textColor="@color/yellow"
                    android:textSize="15sp"/>
                <Button
                    android:id="@+id/idBtnBrac2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black_shade_2"
                    android:padding="6dp"
                    android:gravity="center"
                    android:text="@string/brac2"
                    android:textColor="@color/yellow"
                    android:textSize="15sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:weightSum="5">
                <Button
                    android:id="@+id/idBtnSin"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:textAllCaps="false"
                    android:backgroundTint="@color/black_shade_2"
                    android:padding="6dp"
                    android:gravity="center"
                    android:text="@string/sin"
                    android:textColor="@color/yellow"
                    android:textSize="15sp"/>
                <Button
                    android:id="@+id/idBtnCos"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:textAllCaps="false"
                    android:backgroundTint="@color/black_shade_2"
                    android:padding="6dp"
                    android:gravity="center"
                    android:text="@string/cos"
                    android:textColor="@color/yellow"
                    android:textSize="15sp"/>
                <Button
                    android:id="@+id/idBtnTan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black_shade_2"
                    android:padding="6dp"
                    android:gravity="center"
                    android:textAllCaps="false"
                    android:text="@string/tan"
                    android:textColor="@color/yellow"
                    android:textSize="15sp"/>
                <Button
                    android:id="@+id/idBtnLog"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black_shade_2"
                    android:padding="6dp"
                    android:gravity="center"
                    android:textAllCaps="false"
                    android:text="@string/log"
                    android:textColor="@color/yellow"
                    android:textSize="15sp"/>
                <Button
                    android:id="@+id/idBtnLn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black_shade_2"
                    android:padding="6dp"
                    android:gravity="center"
                    android:textAllCaps="false"
                    android:text="@string/ln"
                    android:textColor="@color/yellow"
                    android:textSize="15sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:weightSum="5">
                <Button
                    android:id="@+id/idBtnfact"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textAllCaps="false"
                    android:backgroundTint="@color/black_shade_2"
                    android:padding="6dp"
                    android:text="@string/xfac"
                    android:textColor="@color/yellow"
                    android:textSize="15sp"/>
                <Button
                    android:id="@+id/idBtnSquare"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textAllCaps="false"
                    android:backgroundTint="@color/black_shade_2"
                    android:padding="6dp"
                    android:text="@string/x_2"
                    android:textColor="@color/yellow"
                    android:textSize="15sp"/>
                <Button
                    android:id="@+id/idBtnSqRoot"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:backgroundTint="@color/black_shade_2"
                    android:padding="6dp"
                    android:textAllCaps="false"
                    android:text="@string/root"
                    android:textColor="@color/yellow"
                    android:textSize="15sp"/>
                <Button
                    android:id="@+id/idBtnInv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:backgroundTint="@color/black_shade_2"
                    android:padding="6dp"
                    android:textAllCaps="false"
                    android:text="@string/_1_x"
                    android:textColor="@color/yellow"
                    android:textSize="15sp"/>
                <Button
                    android:id="@+id/idBtnDiv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black_shade_2"
                    android:padding="6dp"
                    android:gravity="center"
                    android:textAllCaps="false"
                    android:text="/"
                    android:textColor="@color/yellow"
                    android:textSize="15sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:weightSum="4">
                <Button
                    android:id="@+id/idBtn7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textAllCaps="false"
                    android:backgroundTint="@color/black_shade_2"
                    android:padding="6dp"
                    android:text="@string/_7"
                    android:textColor="@color/white"
                    android:textSize="15sp"/>
                <Button
                    android:id="@+id/idBtn8"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:textAllCaps="false"
                    android:gravity="center"
                    android:backgroundTint="@color/black_shade_2"
                    android:padding="6dp"
                    android:text="@string/_8"
                    android:textColor="@color/white"
                    android:textSize="15sp"/>
                <Button
                    android:id="@+id/idBtn9"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black_shade_2"
                    android:padding="6dp"
                    android:gravity="center"
                    android:textAllCaps="false"
                    android:text="@string/_9"
                    android:textColor="@color/white"
                    android:textSize="15sp"/>
                <Button
                    android:id="@+id/idBtnMul"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black_shade_2"
                    android:padding="6dp"
                    android:gravity="center"
                    android:textAllCaps="false"
                    android:text="@string/x"
                    android:textColor="@color/yellow"
                    android:textSize="15sp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:weightSum="4">
                <Button
                    android:id="@+id/idBtn4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textAllCaps="false"
                    android:backgroundTint="@color/black_shade_2"
                    android:padding="6dp"
                    android:text="@string/_4"
                    android:textColor="@color/white"
                    android:textSize="15sp"/>
                <Button
                    android:id="@+id/idBtn5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:textAllCaps="false"
                    android:backgroundTint="@color/black_shade_2"
                    android:padding="6dp"
                    android:gravity="center"
                    android:text="@string/_5"
                    android:textColor="@color/white"
                    android:textSize="15sp"/>
                <Button
                    android:id="@+id/idBtn6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black_shade_2"
                    android:padding="6dp"
                    android:textAllCaps="false"
                    android:gravity="center"
                    android:text="@string/_6"
                    android:textColor="@color/white"
                    android:textSize="15sp"/>
                <Button
                    android:id="@+id/idBtnSub"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black_shade_2"
                    android:padding="6dp"
                    android:gravity="center"
                    android:textAllCaps="false"
                    android:text="@string/sub"
                    android:textColor="@color/yellow"
                    android:textSize="15sp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:weightSum="4">
                <Button
                    android:id="@+id/idBtn1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:textAllCaps="false"
                    android:backgroundTint="@color/black_shade_2"
                    android:padding="6dp"
                    android:gravity="center"
                    android:text="@string/_1"
                    android:textColor="@color/white"
                    android:textSize="15sp"/>
                <Button
                    android:id="@+id/idBtn2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:textAllCaps="false"
                    android:backgroundTint="@color/black_shade_2"
                    android:padding="6dp"
                    android:gravity="center"
                    android:text="@string/_2"
                    android:textColor="@color/white"
                    android:textSize="15sp"/>
                <Button
                    android:id="@+id/idBtn3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black_shade_2"
                    android:padding="6dp"
                    android:gravity="center"
                    android:textAllCaps="false"
                    android:text="@string/_3"
                    android:textColor="@color/white"
                    android:textSize="15sp"/>
                <Button
                    android:id="@+id/idBtnAdd"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black_shade_2"
                    android:padding="6dp"
                    android:gravity="center"
                    android:textAllCaps="false"
                    android:text="@string/add"
                    android:textColor="@color/yellow"
                    android:textSize="15sp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:weightSum="4">
                <Button
                    android:id="@+id/idBtnPi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textAllCaps="false"
                    android:backgroundTint="@color/black_shade_2"
                    android:padding="6dp"
                    android:text="@string/pi"
                    android:textColor="@color/white"
                    android:textSize="15sp"/>
                <Button
                    android:id="@+id/idBtnZero"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textAllCaps="false"
                    android:backgroundTint="@color/black_shade_2"
                    android:padding="6dp"
                    android:text="@string/_0"
                    android:textColor="@color/white"
                    android:textSize="15sp"/>
                <Button
                    android:id="@+id/idBtnDot"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black_shade_2"
                    android:padding="6dp"
                    android:gravity="center"
                    android:textAllCaps="false"
                    android:text="@string/dot"
                    android:textColor="@color/white"
                    android:textSize="15sp"/>
                <Button
                    android:id="@+id/idBtnEqual"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black_shade_2"
                    android:padding="6dp"
                    android:gravity="center"
                    android:textAllCaps="false"
                    android:text="@string/equals"
                    android:textColor="@color/yellow"
                    android:textSize="15sp"/>

            </LinearLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>




</RelativeLayout>